<%= form_with(model: [ profile, control ], local: true) do |form| %>
  <% if control.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(control.errors.count, "error") %> prohibited this control from being saved:</h2>

      <ul>
      <% control.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :control_title, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :desc %>
    <%= form.text_field :desc, id: :control_desc, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :impact %>
    <%= form.text_field :impact, id: :control_impact, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :refs %>
    <%= form.text_field :refs_list, id: :control_refs, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_area :code, id: :control_code, class: "form-control"  %>
  </div>

  <strong>Source Location</strong>
  <div class="form-group input-group">
    <div class="form-group">
      <%= form.label :sl_ref, "Ref" %>
      <%= form.text_field :sl_ref, id: :control_source_location_ref, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :sl_line, "Line" %>
      <%= form.text_field :sl_line, id: :control_source_location_line, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :control_id, "Control ID" %>
    <%= form.text_field :control_id, id: :control_control_id, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= button_tag(type: "submit", class: "btn btn-primary") do %>
      <i class="fa fa-edit"></i> Save
    <% end %>
    <%= link_to ('<i class="fa fa-cancel"></i> Cancel').html_safe, edit_profile_path(profile.id), class: "btn btn-info pull-right" %>
  </div>
  </div>
<% end %>
