<section class="content-header">
  <h1>
    Filter Groups
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to ('<i class="fa fa-dashboard"> </i>Dashboard').html_safe, root_path %></li>
    <li class="active">Filter Groups</li>
  </ol>
</section>

<section class="content container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Filter Groups</h3>
        </div>
        <!-- /.box-header -->
        <% if can? :read, FilterGroup %>
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tr>
                <th>Name</th>
                <th>Filters</th>
                <th></th>
              </tr>
              <% @filter_groups.each do |filter_group| %>
                <tr>
                  <td><%= link_to filter_group.name, filter_group %></td>
                  <td>
                    <%= filter_group.filters.map{|filter| filter.to_s}.join(', ') %>
                  </td>
                  <td><%= link_to 'Destroy', filter_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% if can? :create, FilterGroup %>
    <div class="box-body">
      <%= link_to 'New Filter Group', new_filter_group_path, class: "btn btn-info" %>
    </div>
  <% end %>
</section>
