<section class="content-header">
  <h1>
    Filters
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to ('<i class="fa fa-dashboard"> </i>Dashboard').html_safe, root_path %></li>
    <li class="active">Filters</li>
  </ol>
</section>

<section class="content container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Filters</h3>
        </div>
        <!-- /.box-header -->
        <% if can? :read, FilterGroup %>
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tr>
                <th>Filter</th>
                <th>Family</th>
                <th>Number</th>
                <th>Part</th>
                <th>Sub-Part</th>
                <th>Enhancement</th>
                <th>Part</th>
                <th>Sub-Part</th>
                <th colspan="3"></th>
              </tr>
              <% @filters.each do |filter| %>
                <tr>
                  <td><%= link_to filter.to_s, filter %></td>
                  <td><%= ary_to_s(filter.family) %></td>
                  <td><%= ary_to_s(filter.number) %></td>
                  <td><%= ary_to_s(filter.sub_fam) %></td>
                  <td><%= ary_to_s(filter.sub_num) %></td>
                  <td><%= ary_to_s(filter.enhancement) %></td>
                  <td><%= ary_to_s(filter.enh_sub_fam) %></td>
                  <td><%= ary_to_s(filter.enh_sub_num) %></td>
                  <td><%= link_to 'Destroy', filter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="box-body">
    <%= link_to 'New Filter', new_filter_path, class: "btn btn-info" %>
  </div>
</section>
