<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <div data-turbolinks="false">
    <!-- Sidebar user panel (optional) -->

    <!-- search form (Optional) -->
    <!-- /.search form -->

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu" data-widget="tree">
      <li>
        <a href="<%= root_path %>"><i class="fa fa-dashboard"></i> <span>Dashboard</span>
        </a>
      </li>
      <!-- Optionally, you can add icons to the links -->
      <li class="treeview">
        <a href="<%= profiles_path %>"><i class="fa fa-table"></i> <span>Profiles</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li><%= link_to "All Profiles", profiles_path %></li>
          <% if can? :create, Profile %>
            <li>
              <%= form_tag(upload_profiles_path, multipart: true, :html => {class: 'form-control'}) do %>
                <div class="input-group">
                  <%= label_tag :file, "Upload Profile", :class => "menu-text" %>
                  <%= file_field_tag :file, :class => "menu-text" %>
                </div>
                <br>
                <div class="actions">
                  <%= submit_tag 'Upload', :class => "btn btn-info" %>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      </li>
      <li class="treeview">
        <a href="<%= evaluations_path %>"><i class="fa fa-table"></i> <span>Evaluations</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li><%= link_to "All Evaluations", evaluations_path %></li>
          <% if can? :create, Evaluation %>
            <li>
              <%= form_tag(upload_evaluations_path, multipart: true, :html => {class: 'form-control'}) do %>
                <div class="input-group">
                  <%= label_tag :file, "Upload Evaluation", :class => "menu-text" %>
                  <%= file_field_tag :file, :class => "menu-text" %>
                </div>
                <br>
                <div class="actions">
                  <%= submit_tag 'Upload', :class => "btn btn-info" %>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      </li>
      <li class="treeview">
        <a href="<%= repos_path %>"><i class="fa fa-table"></i> <span>Repos</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li><%= link_to "All Repos", repos_path %></li>
        </ul>
      </li>
    </ul>
    <br>
    <br>
    <div>
      <% flash.each do |key, value| %>
        <div id="flash" class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>
  </div>
    <!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
